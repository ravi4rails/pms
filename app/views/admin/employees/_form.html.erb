<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :employee_first_name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :middle_name %>
        <%= form.text_field :middle_name, id: :employee_middle_name, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :employee_last_name, class: "form-control"  %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :date_of_birth %>
        <%= form.text_field :date_of_birth, id: :employee_date_of_birth, class: "datepicker form-control"  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender, id: :employee_gender, class: "form-control"  %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :work_email %>
    <%= form.email_field :work_email, id: :employee_work_email, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :personal_email %>
    <%= form.email_field :personal_email, id: :employee_personal_email, class: "form-control"  %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :contact_number %>
        <%= form.text_field :contact_number, id: :employee_contact_number, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :emergency_contact %>
        <%= form.text_field :emergency_contact, id: :employee_emergency_contact, class: "form-control"  %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :blood_group %>
        <%= form.text_field :blood_group, id: :employee_blood_group, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :marital_status %>
        <%= form.text_field :marital_status, id: :employee_marital_status, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :nationality %>
        <%= form.text_field :nationality, id: :employee_nationality, class: "form-control"  %>
      </div>
    </div>
  
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :city %>
        <%= form.text_field :city, id: :employee_city, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :state %>
        <%= form.text_field :state, id: :employee_state , class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :country %>
        <%= form.text_field :country, id: :employee_country, class: "form-control"  %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :permanent_address %>
    <%= form.text_field :permanent_address, id: :employee_permanent_address, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :residential_address %>
    <%= form.text_field :residential_address, id: :employee_residential_address, class: "form-control"  %>
  </div><br>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>

